{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        <div style="padding-top: 3px">
            {{ include('@I18n/profiler/logo.svg.twig') }}
        </div>
    {% endset %}
    {% set text %}
        {% if collector.isFrontend %}
            <div class="sf-toolbar-info-piece">
                <b>zone id</b>
                <span>{{ collector.zoneId }}</span>
            </div>
            <div class="sf-toolbar-info-piece">
                <b>mode</b>
                <span>{{ collector.i18nMode }}</span>
            </div>
            <div class="sf-toolbar-info-piece">
                <b>current locale</b>
                <span>{{ collector.locale }}</span>
            </div>
            <div class="sf-toolbar-info-piece">
                <b>current language</b>
                <span>{{ collector.language }}</span>
            </div>
            <div class="sf-toolbar-info-piece">
                <b>current country</b>
                <span>{{ collector.country }}</span>
            </div>
        {% else %}
            <div class="sf-toolbar-info-piece">
                <b>status</b>
                <span>disabled in backend</span>
            </div>
        {% endif %}
    {% endset %}
    {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { link: false }) }}
{% endblock %}
